@model FrancisStore.Web.Models.ItemListViewModel
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_ContentLayout.cshtml";
}

@if (Model.Items.Any())
{
    <!-- Cart item -->
    <div class="container-table-cart pos-relative">
        <div class="wrap-table-shopping-cart bgwhite">
            <table class="table-shopping-cart">
                <tbody>
                    <tr class="table-head">
                        <th class="column-1"></th>
                        <th class="column-2">Product</th>
                        <th class="column-3">Options</th>
                        <th class="column-4">Price</th>
                        <th class="column-5">Quantity</th>
                        <th class="column-6 p-l-20">Total</th>
                    </tr>

                    @foreach (var item in Model.Items)
                    {
                        <tr class="table-row">
                            <td class="column-1">
                                <div class="cart-img-product b-rad-4 o-f-hidden">
                                    <img src="@item.Image" alt="IMG-PRODUCT">
                                </div>
                            </td>
                            <td class="column-2">@item.Name</td>
                            <td class="column-3">@item.Options</td>
                            <td class="column-4">$@item.Price</td>
                            <td class="column-5">
                                <div class="flex-w bo5 of-hidden w-size17">
                                    <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                                        <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                                    </button>

                                    <input class="size8 m-text18 t-center num-product" type="number" name="num-product1" value="@item.Count">

                                    <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                                        <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </td>
                            <td class="column-6">$@item.Total</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="flex-w flex-col-r p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
        <div class="size10 trans-0-4 m-t-10 m-b-10">
            <!-- Button -->
            @using (Html.BeginForm("Clear", "Cart", FormMethod.Post, new { @class = "form-horizontal", id = "form-clearcart", role = "form" })) { }
            <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" id="btn-clearcart">Clear</button>
        </div>
    </div>

    <!-- Total -->
    <div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">


        <h5 class="m-text20 p-b-24">
            Cart Totals
        </h5>

        <!--  -->
        <div class="flex-w flex-sb-m p-b-12">
            <span class="s-text18 w-size19 w-full-sm">
                Subtotal:
            </span>

            @Html.HiddenFor(m => m.Subtotal);
            <span class="m-text21 w-size20 w-full-sm">
                $@Model.Subtotal
            </span>
        </div>

        <!--  -->
        <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
            <span class="s-text18 w-size19 w-full-sm">
                Shipping:
            </span>

            <div class="w-size20 w-full-sm">
                <p class="s-text8 p-b-23">
                    There are no shipping methods available. Please double check your address, or contact us if you need any help.
                </p>
                @using (Html.BeginForm("Index", "Checkout", FormMethod.Get, new { @class = "form-horizontal", id = "form-checkout", role = "form" }))
                {
                    <span class="s-text19">Calculate Shipping</span>
                    <div class="rs2-select2 rs3-select2 rs4-select2 bo4 of-hidden w-size21 m-t-8 m-b-12">
                        <select class="selection-2 select2-hidden-accessible" name="country" tabindex="-1" aria-hidden="true" id="select-country">
                            <option value="">Select a country...</option>
                            @foreach (var country in Model.Countries)
                            {
                                <option value="@country.Id">@country.Name</option>
                            }
                        </select>
                    </div>
                }

                <span class="s-text19">Shipping Fee</span>
                <p class="m-text21 w-size20 w-full-sm" id="txtShippingFee">$0</p>
            </div>

        </div>

        <!--  -->
        <div class="flex-w flex-sb-m p-t-26 p-b-30">
            <span class="m-text22 w-size19 w-full-sm">
                Total:
            </span>

            <span class="m-text21 w-size20 w-full-sm" id="txtTotal">
                $@Model.Subtotal
            </span>
        </div>

        <div class="size15 trans-0-4">
            <!-- Button -->
            <button id="btn-checkout" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" onclick="document.getElementById('form-checkout').submit()">
                Proceed to Checkout
            </button>
        </div>
    </div>
}
else
{
    <h3 class="m-text5 t-center">Cart is empty!</h3>
}

@section TitlePage
    {
    @{Html.RenderPartial("_TitlePage");}
}

@section DropdownSelection
{
    <div id="CountrySelections"></div>
}

@section Scripts
{
    <script type="text/javascript" src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script>
        //Filter Selections
        $(".selection-2").select2({
            minimumResultsForSearch: 20,
            dropdownParent: $('#LanguageSelection')
        });

        $("#btn-clearcart").on('click', function (event) {
            event.preventDefault();
            var url = $("#form-clearcart").attr("action");
            $.ajax({
                url: url,
                type: "POST",
                contentType: "application/json; charset=utf-8",
                complete: function (jqXHR, textStatus) {
                    if (jqXHR.status == 200) {
                        swal("Cart has been cleared!", "success");
                        $("#container-content").html('<h3 class="m-text5 t-center">Cart is empty!</h3>');
                        return;
                    }

                    if (jqXHR.status == 404) {
                        swal("An error occurred!", "success");
                    }

                    console.log("An error occurred!");
                }
            });
        });

        $("#select-country").change('click', function () {
            var id = $("#select-country").val();

            if (!id) {
                $("#txtTotal").html('$' + (+$("#Subtotal").val()));
                $("#txtShippingFee").html('$' + 0);
                return;
            }

            var data = { Id: id }
            var url = "Cart/GetCountry";
            $.ajax({
                url: url,
                type: "POST",
                data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8",
                complete: function (jqXHR, textStatus) {
                    if (jqXHR.status == 200) {
                        if (jqXHR.responseText && jqXHR.responseText.length > 0) {
                            var country = JSON.parse(jqXHR.responseText);
                            $("#txtTotal").html('$' + (country.ShippingFee + (+$("#Subtotal").val())));
                            $("#txtShippingFee").html('$' + country.ShippingFee);
                        }
                        return;
                    }

                    if (jqXHR.status == 404) {
                        console.log("Not found!");
                        return;
                    }

                    console.log("An error occurred!");
                }
            });
        });
    </script>
}
