<!-- Title Page -->
@{Html.RenderPartial("_TitlePage");}

<!-- Content page -->
<section class="bgwhite p-t-55 p-b-65">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
                <div class="leftbar p-r-20 p-r-0-sm">
                    <!-- Categories -->
                    @{Html.RenderAction(nameof(ProductController.Categories), ViewContext.RouteData.Values["controller"]);}

                    <!-- Filters -->
                    @{Html.RenderAction(nameof(ProductController.Filters), ViewContext.RouteData.Values["controller"]);}
                </div>
            </div>

            <div class="col-sm-6 col-md-8 col-lg-9 p-b-50">
                <!-- Sorting -->
                @{Html.RenderAction(nameof(ProductController.Sorting), ViewContext.RouteData.Values["controller"]);}

                <!-- Products -->
                @{Html.RenderAction(nameof(ProductController.Products), ViewContext.RouteData.Values["controller"]);}

                <!-- Pagination -->
                @{Html.RenderAction(nameof(ProductController.Pagination), ViewContext.RouteData.Values["controller"]);}
            </div>
        </div>
    </div>
</section>

@section DropdownSelection
{
    <div id="FilterSelections"></div>
}

@section Scripts
{
    @Scripts.Render("~/bundles/~/bundles/daterangepicker")
    @Scripts.Render("~/bundles/slick-carousel")
    @Scripts.Render("~/bundles/sweetalert")
    @Scripts.Render("~/bundles/noUiSlider")
    <script>
        //Filter Selections
        $(".selection-2").select2({
            minimumResultsForSearch: 20,
            dropdownParent: $('#FilterSelections')
        });

        //Add to card modal
        $('.block2-btn-addcart').each(function () {
            var nameProduct = $(this).parent().parent().parent().find('.block2-name').html();
            $(this).on('click', function () {
                swal(nameProduct, "is added to cart !", "success");
            });
        });

        //Add to whishlist modal
        $('.block2-btn-addwishlist').each(function () {
            var nameProduct = $(this).parent().parent().parent().find('.block2-name').html();
            $(this).on('click', function () {
                swal(nameProduct, "is added to wishlist !", "success");
            });
        });

        //Filter slider
        var filterBar = document.getElementById('filter-bar');

        noUiSlider.create(filterBar, {
            start: [50, 200],
            connect: true,
            range: {
                'min': 50,
                'max': 200
            }
        });

        var skipValues = [
            document.getElementById('value-lower'),
            document.getElementById('value-upper')
        ];

        filterBar.noUiSlider.on('update', function (values, handle) {
            skipValues[handle].innerHTML = Math.round(values[handle]);
        });
    </script>
}

@section Styles
{
    @Styles.Render("~/lib/noUiSlider")
}